<h1>Eat-Da-Burger!</h1>



<h2>Burgers to eat!</h2>

<ul>
  {{#each burgers}}
    {{#unless eaten}}
      {{> burgers/burger-block eaten=true}}
    {{/unless}}
  {{/each}}
</ul>

<h2>Burgers that someone ate!</h2>

<ul>
  {{#each burgers}}
    {{#if eaten}}
      {{> burgers/cat-block eaten=false}}
    {{/if}}
  {{/each}}
</ul>

<h2>Add a burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="name">
  </div>

  <div class="form-group">
    <label for="eaten">Eat?</label><br>
    <input type="radio" name="sleepy" value="1" checked> Eaten!<br>
    <input type="radio" name="sleepy" value="0"> Available
  </div>

  <button type="submit">Add Burger</button>
</form>
